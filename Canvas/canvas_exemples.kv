<CanvasExempleTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "1"
        CanvasExemple1:
    TabbedPanelItem:
        text: "2"
        CanvasExemple2:
    TabbedPanelItem:
        text: "3"
        CanvasExemple3:
    TabbedPanelItem:
        text: "4"
        CanvasExemple4:
    TabbedPanelItem:
        text: "5"
        CanvasExemple5:
    TabbedPanelItem:
        text: "6"
        CanvasExemple6:
    TabbedPanelItem:
        text: "7"
        CanvasExemple7:

#: set s 150

<CanvasExemple1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s,s
        Ellipse:
            pos: 100,300
            size: s, s/2
        Line:
            points: (0,0, self.width/2,100, self.width,self.height)


<CanvasExemple2>:
    canvas:
        Line:
            points:(self.width/2,0, self.width/2,self.height)
        Line:
            points: (0,self.height/2, self.width,self.height/2)

<CanvasExemple3>:
    canvas:
        Line:
            circle: (100,200,50) # center_x, center_y, rayon
            width: 2
        Line:
            ellipse: (200,30,100,200) # pos_x, pos_y, rayon_1, rayon_2
            width:4
        Line:
            rectangle: (200,300,100,150) #
            width: 3

<CanvasExemple4>:
    Button:
        text: "Move"
        pos: 200,200
        size: 50,50
        on_press: root.on_click_to_move()

<CanvasExemple6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 1, 0
                Rectangle:
                    size: self.size
        RelativeLayout:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size

<CanvasExemple7>:
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size